pipeline {
    agent any
    stages {
        stage("Checkout Code") {
            steps {
                checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[
                                                    url: "https://github.com/devops5014/sample-webapp.git",
                                                    credentialsId: "github_token"
                                            ]]
                ])
            }
        }
        stage("Build") {
            steps {
                sh '''
                mvn clean install
                '''
            }
        }
        stage("Test") {
            steps {
                sh '''
                mvn test
                '''
            }
        }
        stage("Deploy To Artifactory") {
            steps {
                configFileProvider([configFile(fileId: 'da703f06-3dd8-4497-a27c-532d5204f519' , variable: 'MAVEN_SETTINGS')]) {
                    sh '''
                    mvn deploy -s $MAVEN_SETTINGS
                    '''
                }
            }
        }
    }
}